<?xml version="1.0" encoding="UTF-8"?>

<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
<servlet>
    <servlet-name>sha</servlet-name>
    <servlet-class>com.shaheensoftware.HelloServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>sha</servlet-name>
    <url-pattern>/greet</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>productRegistration</servlet-name>
    <servlet-class>com.shaheensoftware.ProductRegistrationServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>productRegistration</servlet-name>
    <url-pattern>/product</url-pattern>
</servlet-mapping>

<servlet>
  <servlet-name>order</servlet-name>
  <servlet-class>com.shaheensoftware.OrderServlet</servlet-class>
  </servlet>
<servlet-mapping>
  <servlet-name>order</servlet-name>
  <url-pattern>/order</url-pattern>
 </servlet-mapping>
 
 <servlet>
   <servlet-name>welcome</servlet-name>
   <servlet-class>com.shaheensoftware.WelcomePage</servlet-class>
 </servlet>
 
 <servlet-mapping>
  <servlet-name>welcome</servlet-name>
  <url-pattern>/</url-pattern>
  </servlet-mapping>
   

</web-app>